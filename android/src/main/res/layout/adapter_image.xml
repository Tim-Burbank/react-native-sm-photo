<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_avatar_adapter_album"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yunio.videocapture.view.ImageViewNet
        android:id="@+id/ive_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/blank"
        android:scaleType="centerCrop"
        hs:default_src="@drawable/image_default" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alph_80"
        android:scaleType="center"
        android:src="@drawable/ic_checked"
        android:visibility="gone" />

</RelativeLayout>